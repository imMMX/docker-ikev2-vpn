config setup
    uniqueids=never

conn ikev2-vpn
    type=tunnel
    keyexchange=ikev2

    auto=add
    compress=no
    forceencaps=yes
    fragmentation=yes
    ike=aes256-sha1-modp1024,aes128-sha1-modp1024,3des-sha1-modp1024!
    esp=aes256-sha256,aes256-sha1,3des-sha1!
    rekey=no

    # dead peer detection
    dpdaction=restart
    dpddelay=300s

    # server-side
    left=%any
    leftid={host}
    leftcert=server-cert.pem
    leftsendcert=always
    leftsubnet=0.0.0.0/0

    # client-side
    right=%any
    rightid=%any
    rightauth=eap-mschapv2
    rightsourceip=10.10.1.0/24
    rightdns=114.114.114.114
    rightsendcert=never
    eap_identity=%identity
